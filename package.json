{
  "name": "streamv10",
  "version": "1.0.0",
  "description": "Streaming platform with admin panel, file-based backend, and Next.js frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:web\"",
    "dev:server": "tsx --watch src/server/server.ts",
    "dev:web": "next dev",
    "build": "npm run build:server && npm run build:web",
    "build:server": "tsc -p tsconfig.server.json",
    "build:web": "next build",
    "start": "NODE_ENV=production node dist/server.js",
    "lint": "biome check .",
    "seed": "tsx scripts/seed.ts",
    "backup": "tsx scripts/backup.ts",
    "lint:catalog": "tsx scripts/lint-catalog.ts"
  },
  "dependencies": {
    "@csstools/normalize.css": "^12.1.1",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@hapi/iron": "^7.0.0",
    "@next/font": "^14.2.10",
    "@tanstack/react-query": "^5.51.11",
    "bcryptjs": "^2.4.3",
    "concurrently": "^9.0.1",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.0.0",
    "csurf": "^1.11.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "dompurify": "^3.1.7",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "hls.js": "^1.5.14",
    "jsdom": "^24.1.3",
    "next": "^14.2.10",
    "next-themes": "^0.3.0",
    "nookies": "^2.5.2",
    "proper-lockfile": "^4.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "slugify": "^1.6.6",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.8.6",
    "@types/proper-lockfile": "^4.1.5",
    "@types/slugify": "^1.6.4",
    "@types/uuid": "^9.0.7",
    "@types/cookie-session": "^2.0.44",
    "biome": "^1.9.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
